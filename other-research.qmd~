<style>
/* Match the look of Quarto listing filter chips */
.chip-bar {
  display: flex;
  flex-wrap: wrap;
  gap: .5rem;
  margin: .5rem 0 1rem 0;
}
.chip {
  display: inline-flex;
  align-items: center;
  gap: .35rem;
  padding: .35rem .75rem;
  border: 1px solid var(--quarto-border-color, #ccc);
  border-radius: 999px;
  background: var(--quarto-background-body, #fff);
  cursor: pointer;
  font-size: .875rem;
  line-height: 1rem;
}
.chip .count {
  display: inline-block;
  padding: .05rem .4rem;
  border-radius: .75rem;
  border: 1px solid var(--quarto-border-color, #ccc);
  font-size: .75em;
  opacity: .8;
}
.chip.is-selected {
  background: var(--quarto-accent, var(--bs-primary, #3d52a0));
  color: white;
  border-color: transparent;
}
.chip-ghost {
  opacity: .8;
}
.item-tags {
  display: inline-flex;
  gap: .25rem;
  margin-left: .5rem;
}
.chip-small {
  font-size: .75rem;
  padding: .25rem .5rem;
}
.search-wrap {
  display: flex;
  align-items: center;
  gap: .5rem;
  margin-left: auto;
}
#filter-search {
  max-width: 18rem;
  padding: .35rem .5rem;
  border-radius: .35rem;
  border: 1px solid var(--quarto-border-color, #ccc);
}
#keyword-filter {
  display: flex;
  align-items: center;
  gap: .75rem;
  flex-wrap: wrap;
}
#no-matches.hidden { display: none; }
</style>
<script>
document.addEventListener('DOMContentLoaded', function() {
  const container = document.getElementById('pubs');
  const items = Array.from(container.querySelectorAll('li'));

  // Annotate items with topics from explicit data embedded in each item
  const topicCounts = new Map();
  const topicSet = new Set();
  items.forEach(li => {
    const meta = li.querySelector('.pub-topics');
    let topics = [];
    if (meta && meta.dataset.topics) {
      try { topics = JSON.parse(meta.dataset.topics); } catch (e) { topics = []; }
    }
    if (!Array.isArray(topics) || topics.length === 0) {
      topics = ['Uncategorized'];
    }
    li.dataset.topics = JSON.stringify(topics);
    li.classList.add('pub-item');

    // Add visible tags at end of item
    const tags = document.createElement('span');
    tags.className = 'item-tags';
    topics.forEach(t => {
      const a = document.createElement('button');
      a.type = 'button';
      a.className = 'chip chip-small chip-ghost';
      a.textContent = t;
      a.dataset.topic = t;
      a.title = 'Filter by ' + t;
      a.addEventListener('click', (ev) => {
        ev.preventDefault();
        selectSingleTopic(t);
      });
      tags.appendChild(a);
    });
    li.appendChild(tags);

    topics.forEach(t => {
      topicSet.add(t);
      topicCounts.set(t, (topicCounts.get(t)||0) + 1);
    });
  });

  // Build the filter UI
  const toolbar = document.getElementById('keyword-filter');
  const bar = document.createElement('div');
  bar.className = 'chip-bar';

  const selected = new Set();

  function applyFilter() {
    const query = document.getElementById('filter-search').value.trim().toLowerCase();
    const queryParts = query.length ? query.split(/\s+/g) : [];
    const matchQuery = (text) => {
      if (!queryParts.length) return true;
      return queryParts.every(q => text.includes(q));
    };

    let visibleCount = 0;
    items.forEach(li => {
      const topics = JSON.parse(li.dataset.topics || '[]');
      const text = li.textContent.replace(/\s+/g,' ').trim().toLowerCase();
      const topicOk = (selected.size === 0) || topics.some(t => selected.has(t));
      const queryOk = matchQuery(text);
      const show = topicOk && queryOk;
      li.style.display = show ? '' : 'none';
      if (show) visibleCount++;
    });

    // Hide details sections if they have no visible items
    const detailsNodes = Array.from(container.querySelectorAll('details'));
    detailsNodes.forEach(d => {
      const any = Array.from(d.querySelectorAll('li')).some(li => li.style.display !== 'none');
      d.style.display = any ? '' : 'none';
    });

    document.getElementById('no-matches').classList.toggle('hidden', visibleCount > 0);
  }

  function selectSingleTopic(label) {
    selected.clear();
    Array.from(bar.querySelectorAll('.chip')).forEach(c => c.classList.remove('is-selected'));
    const chip = bar.querySelector(`.chip[data-topic="{}"]`.replace("{}", CSS.escape(label)));
    if (chip) chip.classList.add('is-selected');
    selected.add(label);
    applyFilter();
  }

  // Add "All" chip
  const allBtn = document.createElement('button');
  allBtn.type = 'button';
  allBtn.className = 'chip';
  allBtn.textContent = 'All';
  allBtn.addEventListener('click', () => {
    selected.clear();
    Array.from(bar.querySelectorAll('.chip')).forEach(c => c.classList.remove('is-selected'));
    applyFilter();
  });
  bar.appendChild(allBtn);

  // Add topic chips
  Array.from(topicSet).sort().forEach(label => {
    const btn = document.createElement('button');
    btn.type = 'button';
    btn.className = 'chip';
    btn.dataset.topic = label;
    btn.title = 'Toggle filter for ' + label;
    const count = topicCounts.get(label) || 0;
    btn.textContent = `${label} (${count})`;
    btn.addEventListener('click', () => {
      const wasSelected = selected.has(label);
      if (wasSelected) selected.delete(label);
      else selected.add(label);
      btn.classList.toggle('is-selected', !wasSelected);
      applyFilter();
    });
    bar.appendChild(btn);
  });

  // Add search box + clear
  const searchWrap = document.createElement('div');
  searchWrap.className = 'search-wrap';

  const searchBox = document.createElement('input');
  searchBox.id = 'filter-search';
  searchBox.type = 'search';
  searchBox.placeholder = 'Search titles, authors, venues';
  searchBox.addEventListener('input', applyFilter);
  searchWrap.appendChild(searchBox);

  const clearBtn = document.createElement('button');
  clearBtn.type = 'button';
  clearBtn.className = 'chip chip-ghost';
  clearBtn.textContent = 'Clear';
  clearBtn.title = 'Clear filters and search';
  clearBtn.addEventListener('click', () => {
    selected.clear();
    document.getElementById('filter-search').value = '';
    Array.from(bar.querySelectorAll('.chip')).forEach(c => c.classList.remove('is-selected'));
    applyFilter();
  });
  searchWrap.appendChild(clearBtn);

  toolbar.appendChild(bar);
  toolbar.appendChild(searchWrap);

  applyFilter();
});
</script>
